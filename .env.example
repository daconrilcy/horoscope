# Example environment configuration

# App
APP_ENV=dev
APP_DEBUG=true

# LLM Guard (Issue #9)
LLM_GUARD_ENABLE=true
LLM_GUARD_MAX_INPUT_LEN=1000

# Auth (development only)
JWT_SECRET=dev-secret-change-me
JWT_ALG=HS256
JWT_EXPIRES_MIN=60

# Services (placeholders)
DATABASE_URL=
REDIS_URL=
OPENAI_API_KEY=
VECTOR_BACKEND=faiss

# Vault/Secrets (Issue #10)
VAULT_ENABLED=false
VAULT_ADDR=
VAULT_TOKEN=
# Mocked secrets for local/dev tests (never in prod!)
VAULT_MOCK_OPENAI_API_KEY=
VAULT_MOCK_WEAVIATE_API_KEY=

# Rate limit & budgets (Issue #11)
RATE_LIMIT_TENANT_QPS=5
TENANT_DEFAULT_BUDGET_USD=0
# Optional per-tenant budgets (JSON map)
TENANT_BUDGETS_JSON={}
# Optionally exempt /health from rate limiting
RATE_LIMIT_EXEMPT_HEALTH=false

# Celery Ops (Issue #12)
CELERY_MAX_FAILURES_BEFORE_DLQ=3

# Token counting
TOKEN_COUNT_STRATEGY=auto  # auto|api|tiktoken|words

# Dashboards & SLOs
GRAFANA_DASHBOARD_URL=https://grafana.example.com/d/astro
PROM_QUERY_URL=http://localhost:9090
LLM_BUDGET_MTD=0

# Limiter la cardinalité des labels métriques
ALLOWED_LLM_MODELS=gpt-4o-mini,gpt-4o,claude-3-haiku
ALLOWED_TENANTS=tenantA,tenantB,default
