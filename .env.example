APP_NAME=horoscope-backend
APP_ENV=dev
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# CORS (comma separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# (Optionnel) Postgres/Redis si besoin plus tard
DATABASE_URL=postgresql+psycopg://user:password@db:5432/horoscope
REDIS_URL=redis://redis:6379/0
REQUIRE_REDIS=false
JWT_SECRET=please-change-me
JWT_EXPIRES_MIN=60

# Phase 3 (RAG/LLM/Tracing/Celery)
OPENAI_API_KEY=
EMBEDDINGS_PROVIDER=openai
EMBEDDINGS_MODEL=text-embedding-3-small
LOCAL_EMBEDDINGS_MODEL=all-MiniLM-L6-v2
# Historique / compat: VECTOR_BACKEND (déprécié)
VECTOR_BACKEND=faiss
# Nouveau : backend de retrieval
RETRIEVAL_BACKEND=faiss
# Dual-write / Shadow-read flags
RETRIEVAL_DUAL_WRITE=false
RETRIEVAL_SHADOW_READ=false
# Config adaptateur Weaviate (optionnel)
WEAVIATE_URL=
WEAVIATE_API_KEY=
# Config adaptateur Pinecone (optionnel)
PINECONE_INDEX=
PINECONE_ENV=
PINECONE_API_KEY=
OTLP_ENDPOINT=
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
